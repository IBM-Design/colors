{{> color-functions.scss}}

//////////////////////////////
// IBM Color Palettes
//////////////////////////////
$__ibm-color-palettes: (
{{#each colors.palettes}}
  '{{name}}': (
{{#if core}}
    core: #{{core_color this}},
{{/if}}
{{#each values}}
    {{grade}}: #{{value}}{{#unless @last}},{{/unless}}
{{/each}}
  ){{#unless @last}},{{/unless}}
{{/each}}
);
