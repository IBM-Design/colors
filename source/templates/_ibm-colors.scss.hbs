{{> color-functions.scss}}

//////////////////////////////
// IBM Color Palettes
//////////////////////////////
$__ibm-color-palettes: (
{{#each colors.palettes as |palette|}}
  '{{palette.name}}': (
{{#if palette.core}}
    core: #{{core_color palette}},
{{/if}}
{{#each palette.values}}
    {{grade}}: #{{value}}{{#unless @last}},{{/unless}}
{{/each}}
  ){{#unless @last}},{{/unless}}
{{/each}}
);
